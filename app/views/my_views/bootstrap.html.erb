<!-- Page Content -->
<div class="container">

  <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Attractions
        <small>Based on your Profile</small>
      </h1>
    </div>
  </div>
  <!-- /.row -->
  <%unless @current_batch.blank?%>
      <% @current_batch.each do |attr| %>
          <!-- Page Header -->
          <div class="row">
            <div class="col-lg-12">
              <h2 class="page-header">
                <%= attr['type'] %>
              </h2>
            </div>
          </div>
          <!-- /.row -->

          <% attr['data'].each_slice(@row_count) do |group| %>
              <!-- Cities Row -->
              <div class="row">
                <% unless group.blank? %>
                    <% group.each do |g| %>
                        <div class="col-md-4 portfolio-item">
                          <% if g['attraction_details']['url'].blank? %>
                              <% image = g['city_detail']['cover_photo_url'] %>
                          <% else %>
                              <% image = g['city_detail']['cover_photo_url'] %>
                          <% end %>
                          <% city = g['city_detail']['city']%>
                          <% description = g['display_name'] %>
                          <a href="hotels?city=<%= city %>">
                            <object data="<%= image.blank? ? 'null' : image %>" type="image/png">
                              <a href="hotels?city=<%= city %>"> <img class="img-responsive" src="../../../assets/default_city.jpg" alt="" height="320" width="205"> </a>
                            </object>
                          </a>
                          <h3>
                            <a href="hotels?city=<%= city %>"><%= city %> </a>
                          </h3>
                          <p><%= description %></p>
                        </div>
                    <% end %>
                <% end %>
              </div>
              <!-- /.row -->
          <% end %>
      <% end %>
  <%end%>




  <hr>

  <!-- Pagination -->
  <div class="row text-center">
    <div class="col-lg-12">
      <ul class="pagination">
        <% (1..@pages).each do |i| %>
            <% if @current_page.to_i == i.to_i%>
                <li class='active'>
                  <a href='home?page=<%= i %>'><%= i %></a>
                </li>
            <% else %>
                <li>
                  <a href='home?page=<%= i %>'><%= i %></a>
                </li>
            <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <!-- /.row -->

